<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2" author="cornknight">
        <createTable tableName="level_type">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(30)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="strength" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="lifetime" type="INTEGER" remarks="Level lifetime in hours">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(100)"/>
        </createTable>
        <createTable tableName="level">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="level_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="ticker_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="adr_daily">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ticker_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="on_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <loadData
                tableName="level_type"
                file="data/level_type.csv">
            <column name="id" type="NUMERIC"/>
            <column name="name" type="STRING"/>
            <column name="strength" type="NUMERIC"/>
            <column name="description" type="STRING"/>
        </loadData>
    </changeSet>

</databaseChangeLog>
