<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="00000000000014" author="oleg">
        <createTable tableName="issue">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <createTable tableName="trade_issues_link">
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="trade_log_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="issue_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="trade_issues_link"
                baseColumnNames="trade_log_id"
                constraintName="trade_issues_link_trade_log_fk"
                referencedTableName="trade_log"
                referencedColumnNames="id"/>
        <addForeignKeyConstraint
                baseTableName="trade_issues_link"
                baseColumnNames="issue_id"
                constraintName="trade_issues_link_issue_fk"
                referencedTableName="issue"
                referencedColumnNames="id"/>
        <addPrimaryKey tableName="trade_issues_link" columnNames="trade_log_id, issue_id"/>
    </changeSet>
</databaseChangeLog>
